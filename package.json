{
    "name": "task-mgmt-api",
    "version": "1.0.0",
    "description": "RESTful API for Task Management Application",
    "main": "index.js",
    "scripts": {
        "dev": "npm run mtgen && tsx watch src/server.ts",
        "build": "rimraf dist && node esbuild.config.js",
        "start": "node dist/index.js",
        "mtgen": "mtgen --output ./src/types \"./src/models/**/!(*index|*sharedSchemas).ts\"",
        "test": "jest --detectOpenHandles --forceExit"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "bull": "^4.16.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^8.2.1",
        "helmet": "^7.1.0",
        "hpp": "^0.2.3",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.0.3",
        "mongoose-tsgen": "9.5.0",
        "nodemailer": "^6.9.7",
        "xss-clean": "^0.1.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/bull": "^3.15.9",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-rate-limit": "^5.1.3",
        "@types/hpp": "^0.2.7",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.5",
        "@types/nodemailer": "^6.4.14",
        "@types/supertest": "^6.0.2",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^9.1.6",
        "rimraf": "^5.0.5",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    },
    "prettier": {
        "printWidth": 100,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 2,
        "endOfLine": "auto",
        "bracketSameLine": true
    }
}