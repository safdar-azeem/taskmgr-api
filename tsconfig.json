{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "mongoose.gen": [
                "./src/types/mongoose.gen.ts"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}